{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@next/next/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/recommended", // If using TypeScript
    "prettier" // Integrates Prettier with ESLint
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "@typescript-eslint", // If using TypeScript
    "prettier" // Prettier plugin for ESLint
  ],
  "rules": {
    "react/react-in-jsx-scope": "off", // Next.js doesn't require React import
    "react/prop-types": "off", // Disable prop-types if using TypeScript
    "@next/next/no-img-element": "off", // Allow native <img> tags if not using <Image />
    "@typescript-eslint/no-unused-vars": ["error"], // TypeScript unused vars rule
    "@typescript-eslint/explicit-module-boundary-types": "off", // Optional for TypeScript
    "prettier/prettier": ["error", { "singleQuote": true }] // Show Prettier errors as ESLint errors
  },
  "settings": {
    "react": {
      "version": "detect" // Automatically detect the react version
    }
  }
}
